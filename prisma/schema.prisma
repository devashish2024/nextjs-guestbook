generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model GuestEntry {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())

  email          String?
  authorName     String
  authorAvatar   String
  githubUsername String?
  isOfficial     Boolean @default(false)
  content        String

  @@index([createdAt(sort: Desc)])
}
